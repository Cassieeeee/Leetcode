public class Solution {
    
    int count=0;
    public int FindTargetSumWays(int[] nums, int S) {
        if (nums!=null)
        {
            DFS(nums,0,S,0);
        }
            
        return count;
    }
    
    private void DFS(int[] nums,int index,int S,int sum)
    {
        if (index==nums.Length)
        {
            if (sum==S)
                count++;
            return;
        }
        
        for(int i=0;i<=1;i++)
        {
            if (i==0)
            {
                DFS(nums,index+1,S,sum-nums[index]);
            }
            else
                DFS(nums,index+1,S,sum+nums[index]);
        }
    }
}